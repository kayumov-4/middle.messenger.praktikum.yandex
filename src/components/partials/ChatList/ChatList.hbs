<div>
    {{#if conversations.length}}
        {{#each conversations}}
        <div 
            class="chat__conversation-item{{#if ../activeChatId}}{{/if}}" 
            data-id="{{id}}">
            <div class="chat__avatar">
            {{#if avatar}}
                <img src="{{avatar}}" alt="Аватар" class="chat__avatar-image">
            {{else}}
                <img src="/public/user.png" alt="Аватар" class="chat__avatar-image">
            {{/if}}
            </div>
            <div class="chat__conversation-info">
            <div class="chat__conversation-header">
                <span class="chat__name">{{title}}</span>
                {{#if last_message}}
                <span class="chat__time">{{last_message.time}}</span>
                {{/if}}
            </div>
            <div class="chat__last-message">
                {{#if last_message}}
                {{last_message.user.first_name}}: {{last_message.content}}
                {{/if}}
            </div>
            </div>
            {{#if unread_count}}
            <div class="chat__unread-badge">{{unread_count}}</div>
            {{/if}}
        </div>
        {{/each}}
    {{else}}
        <p style="text-align: center;">Пока чатов нет</p>
    {{/if}}
</div>
